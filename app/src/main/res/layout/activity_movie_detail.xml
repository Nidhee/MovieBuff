<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/darker_gray">

            <ImageView
                android:id="@+id/ivBackdropImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/gradient_drawable" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/poster_negative_margin"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivPosterImage"
                android:layout_width="@dimen/poster_size"
                android:layout_height="@dimen/poster_size"
                android:elevation="@dimen/normal"
                android:src="@drawable/ic_launcher_foreground" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvMovieTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/normal"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/text_largest"
                    tools:text="Avengers: Endgame" />

                <TextView
                    android:id="@+id/tvVoteAverage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableEnd="@drawable/ic_star"
                    android:drawablePadding="@dimen/tiny"
                    android:gravity="end"
                    android:padding="@dimen/normal"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/text_normal"
                    tools:text="Vote Average" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tvOverview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/large"
            android:lineSpacingExtra="@dimen/small"
            android:paddingStart="@dimen/large"
            android:paddingEnd="@dimen/large"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_larger"
            tools:text="What if a child from another world crash-landed on Earth, but instead of becoming a hero to mankind, he proved to be something far more sinister" />

    </LinearLayout>
</ScrollView>